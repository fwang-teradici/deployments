{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "userName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 20,
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "password": {
      "type": "securestring",
      "minLength": 12,
      "maxLength": 123,
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "Virtual Machine Size."
      }
    },
    "registrationCode": {
      "type": "securestring",
      "minLength": 21,
      "metadata": {
        "description": "PCoIP Standard Agent License Registration Code."
      }
    },
    "videoDriverUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The URL from which video driver for virtual machine will be downloaded, only required for the Graphics Agent."
      }
    },
    "pcoipAgentInstallerUrl": {
      "type": "string",
      "minLength": 13,
      "metadata": {
        "description": "The URL from which pciop agent installer will be downloaded."
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base location of resources, such as templates and DSC modules, that the template depends on"
      }
    }
  },

  "variables": {
    "deploymentApiVersion": "2016-09-01",
    "namePrefix": "pcoip-agent",
    "vmNamePrefix": "[concat(variables('namePrefix'), '-vm')]",
    "resourceLoc": "[concat(parameters('_artifactsLocation'), '/resources/')]"
  },

  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "deployInfra",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('resourceLoc'), 'azure_deploy_infrastructure.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namePrefix": {
            "value": "[variables('namePrefix')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "name": "deployVM",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('resourceLoc'), 'virtual_machine.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmNamePrefix": {
            "value": "[variables('vmNamePrefix')]"
          },
          "userName": {
            "value": "[parameters('userName')]"
          },
          "password": {
            "value": "[parameters('password')]"
          },
          "osType": {
            "value": "RHEL 7.2"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "nicName": {
            "value": "[reference('deployInfra').outputs.nicName.value]"
          }
        }
      }
    }
  ],

  "outputs": {
    "vm_fqdn": {
      "type": "string",
      "value": "[reference('deployInfra').outputs.vm_fqdn.value]"
    }
  }
}