{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "userName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 20,
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "password": {
      "type": "securestring",
      "minLength": 12,
      "maxLength": 123,
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "Virtual Machine Size."
      }
    },
    "osType": {
      "type": "string",
      "defaultValue": "Windows Server 2016",
      "metadata": {
        "description": "Type of OS to use for VM."
      }
    },
    "registrationCode": {
      "type": "securestring",
      "minLength": 21,
      "metadata": {
        "description": "PCoIP Standard Agent License Registration Code."
      }
    },
    "videoDriverUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The URL from which video driver for virtual machine will be downloaded, only required for the Graphics Agent."
      }
    },
    "pcoipAgentInstallerUrl": {
      "type": "string",
      "minLength": 13,
      "metadata": {
        "description": "The URL from which pciop agent installer will be downloaded."
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base location of resources, such as templates and DSC modules, that the template depends on"
      }
    }
  },
  "variables": {
    "deploymentApiVersion": "2016-09-01",
    "namePrefix": "pcoip-agent",
    "resourceLoc": "[concat(parameters('_artifactsLocation'), '/resources/')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "deployInfraVM",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('resourceLoc'), 'azure_deploy_infra_vm.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "userName": {
            "value": "[parameters('userName')]"
          },
          "password": {
            "value": "[parameters('password')]"
          },
          "osType": {
            "value": "[parameters('osType')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "namePrefix": {
            "value": "[variables('namePrefix')]"
          },
          "rdPort": {
            "value": 3389
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "name": "deployVmDsc",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('resourceLoc'), 'vm_pcoip_agent_dsc.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[reference('deployInfraVM').outputs.vmName.value]"
          },
          "pcoipAgentInstallerUrl": {
            "value": "[parameters('pcoipAgentInstallerUrl')]"
          },
          "videoDriverUrl": {
            "value": "[parameters('videoDriverUrl')]"
          },
          "registrationCode": {
            "value": "[parameters('registrationCode')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          }
        }
      }
    }
  ],

  "outputs": {
    "vm_fqdn": {
      "type": "string",
      "value": "[reference('deployInfraVM').outputs.vm_fqdn.value]"
    },
    "vmName": {
      "type": "string",
      "value": "[reference('deployInfraVM').outputs.vmName.value]"
    }
  }
}